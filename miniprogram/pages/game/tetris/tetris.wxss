/* pages/tetris/tetris.wxss */
page{
    position: relative;
    padding: 15px;
    font-size: 24rpx;
}
			.game{
				width: 200px;
				height: 400px;
				border: 1px solid #666;
				position: absolute;
			}
			.next{
				width: 80px;
				height: 80px;
				position: absolute;
				border: 1px solid #666;
				left: 220px;
			}
			.info{
				position: absolute;
				top: 100px;
				left: 220px;
			}
			.done,.none,.current{
				width: 20px;
				height: 20px;
				box-sizing: border-box;
				position: absolute;
			}
            .none{}
			.done{
				background: gray;
				border: 1px solid black;
			}
			.current{
				background: #87CEEB;
				border: 1px solid royalblue;
     
			}
			.btn{
				width: 100px;
				margin-top: 10px;
			}
			.opera-btn {
				border:none;
				background: #429b83;
				width: 40px;
				height: 40px;
				border-radius: 50%;
				color: white;
				text-align: center;
				position: absolute;
                line-height: 40px;
			}
			.rotate{
				top: 290px;
				left: 260px;				
			}
			.down{
				top: 370px;
				left: 260px;
			}
			.left{
				top: 330px;
				left: 220px;
			}
			.right{
				top: 330px;
				left: 300px;
			}