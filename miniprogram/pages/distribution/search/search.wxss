/* miniprogram/pages/distribution/search/search.wxss */
    page{
        font-size: 24rpx;
    }
    header{
        display: flex;
        background: #fff;
        padding: 0 15px;
        height: 44px;
        line-height: 32px;
        position: fixed;
        top: 0;
        box-sizing: border-box;
        width: 100%
         
    }
    
    header >div{
        align-self: center;
        white-space: nowrap
    }
    .header-search{
        flex: auto;
        position: relative;
        font-size: 28rpx;
    }
    .header-search i{
        position: absolute;
        left: 10px;
        color:#ccc
    }
    .header-search input{
        background: rgb(248,248,248);
        width: 100%;
        height: 32px;
        border: none;
        box-sizing: border-box;
        padding-left: 30px;
        border-radius: 10px;
    
    }
    .search-btn{
        margin-left: 20px;
        font-size: 28rpx;
    }
    .mr20{
        margin-right: 20px
    }
.flex-container{
    display: flex;
    
}

.flex-container text,.flex-container > div{

    min-width: 150rpx;
    min-height: 30px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ccc
    
}
.main-wrapper{
    overflow-x: scroll;
    padding-left: 15px
}